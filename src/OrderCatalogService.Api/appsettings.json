{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Database=OrderCatalogDb;Username=postgres;Password=postgres;Maximum Pool Size=200;Minimum Pool Size=10;Connection Idle Lifetime=300;Connection Pruning Interval=10",
    "Redis": "localhost:6379,abortConnect=false,connectRetry=3,connectTimeout=5000"
  },
  
  "AzureAdB2C": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "yourdomain.onmicrosoft.com",
    "TenantId": "your-tenant-id",
    "ClientId": "your-client-id",
    "Scopes": "catalog:read order:read order:write order:cancel"
  },
  
  "ServiceBus": {
    "ConnectionString": "",
    "TopicName": "order-events"
  },
  
  "Seq": {
    "Url": "http://localhost:5341"
  },
  
  "Outbox": {
    "PollingIntervalSeconds": 5,
    "BatchSize": 100,
    "ParallelWorkers": 4
  }
}